{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev",
      "type": "shell",
      "command": "npm run build --  --pretty --watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": "build", 
    },
    {
      "label": "Test",
      "type": "shell",
      "command": "npm run build:test -- --pretty --watch",
      "problemMatcher": [
        "$tsc-watch"
      ],
      "group": "build"
    }
  ]
}