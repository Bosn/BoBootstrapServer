{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "baseUrl": "src",
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": false,
    "pretty": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "strict": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "declaration": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}